<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selector_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkDarkPurple"
    tools:context="com.example.android.camerax.advanced.fragments.PermissionFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/sample_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="@string/sample_legend"
        android:textColor="@color/txWhite"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sample_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sample_legend"
        app:layout_constraintStart_toEndOf="@id/vertical_guideline" />
</androidx.constraintlayout.widget.ConstraintLayout>