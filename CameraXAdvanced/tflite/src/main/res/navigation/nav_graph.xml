<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.android.camerax.advanced.fragments.PermissionsFragment"
        android:label="Permissions" >
        <action
            android:id="@+id/action_permissions_to_selector"
            app:destination="@id/selector_fragment" />
    </fragment>

    <fragment
        android:id="@+id/selector_fragment"
        tools:layout="@layout/fragment_selector"
        android:name="com.example.android.camerax.advanced.fragments.SelectorFragment"
        android:label="Selector">
        <action
            android:id="@+id/action_selector_to_tflite"
            app:destination="@id/tflite_fragment" />
        <action
            android:id="@+id/action_selector_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/tflite_fragment"
        tools:layout="@layout/fragment_tflite"
        android:name="com.example.android.camerax.advanced.fragments.TFLiteFragment"
        android:label="Tflite">
        <action
            android:id="@+id/action_tflite_to_selector"
            app:destination="@id/selector_fragment"
            app:popUpTo="@id/selector_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>